.login {
  position: absolute;

  top: 0;
  right: 0;
  bottom: 0;
  left: 0;

  background: url('/images/login__background.jpg');
  background-size: cover;
}

.login__box {
  position: absolute;

  top: 50%;
  left: 50%;
  width: 416px;
  height: 326px;
  margin: -163px 0 0 -213px;

  background: white;
  border-bottom: 5px solid #7ec7e3;

  &::before {
    content: '';
    position: absolute;

    top: -120px;
    width: 100%;
    height: 100%;

    background: url('/images/login__logo.png') center no-repeat;
  }
}

.login__text {
  position: absolute;

  top: 150px;
  left: 50%;
  width: 280px;
  margin-left: -140px;

  color: #3e454c;
  font-size: 16px;
  text-align: center;
}

.login__button {
  cursor: pointer;
  position: absolute;

  left: 50%;
  bottom: 30px;
  width: 346px;
  height: 60px;
  margin-left: -173px;

  font-size: 22px;
  line-height: 60px;

  background-color: #3a5795;
  color: white;
  font-size: 18px;
  text-align: center;
}

.login__button__facebook {
  font-weight: normal;
}
