.friend-watcher {
  display: inline-block;
  position: relative;

  width: 73px;
  height: 73px;
  margin: 5px 7px 0 0;
}

.friend-watcher__picture {
  width: 100%;
  height: 100%;

  border: 3px solid #ff977f;
  border-radius: 50%;
}


.friend-watcher__name {
  display: none;
  position: absolute;
  z-index: 10;

  top: 100%;
  left: -25px;
  width: 123px;
  padding: 3px;

  background-color: #ff977f;
  color: white;
  text-align: center;
}

.friend-watcher:hover .friend-watcher__name {
  display: block;
}
