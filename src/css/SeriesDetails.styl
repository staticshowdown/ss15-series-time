  font-size: 0;
}

.details__info__entry {
  display: inline-block;

  width: 118px;
  height: 100%;
  padding: 4px 15px;

  font-size: 16px;
  border-right: 1px solid #3e454c;

  &:last-of-type {
    border-right: none;
  }
}

.details__info__value {
  display: inline-block;

  margin-left: 10px;

  font-weight: normal;
}

