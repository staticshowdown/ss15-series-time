}

.details__menu {
  position: absolute;

  top: 170px;
  left: 0;
  width: 214px;
  padding: 0;

  list-style: none;

  li {
    cursor: pointer;

    width: 100%;
    height: 44px;
    padding: 5px 15px;
    margin-bottom: 8px;

    background-color: #d7dbde;
    color: #ff7f66;
    font-size: 20px;
  }
}

.details__info {
  position: absolute;

  top: 0;
  left: 240px;
  width: 592px;
  height: 34px;

  border: 1px solid #3e454c;
