.series {
  display: inline-block;

  cursor: pointer;
  width: 214px;
  height: 317px;
  margin-right: 30px;
  margin-bottom: 20px;
  background-size: cover;
  position: relative;

  h4 {
    text-align: center;
    color: #ffffff;
  }
}

.series__overlay {
  display: none;
  position: absolute;

  top: 0;
  right: 0;
  bottom: 0;
  left: 0;

  background-color: rgba(0, 0, 0, 0.8);
  position: absolute;
}

.series:hover .series__overlay {
  display: block;
}

.series__controls {
  display: flex;
  position: absolute;

  top: 50%;
  left: 10px;
  width: 194px;
  height: 50px;
  margin-top: -25px;

  justify-content: space-around;

  span {
    display: none;
  }

  img {
    cursor: pointer;
  }
}
