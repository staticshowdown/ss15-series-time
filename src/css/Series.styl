.series {
  display: inline-block;

  width: 214px;
  height: 317px;
  margin-right: 30px;
  margin-bottom: 20px;
  background-size: cover;
  position: relative;
}

.series__overlay {
  display: none;

  width: 100%;
  height: 100%;

  background-color: rgba(0, 0, 0, 0.7);
  position: absolute;
}

.series:hover .series__overlay {
  display: block;
}
