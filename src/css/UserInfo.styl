dark = #106bc4
medium = #2185c6
light = #7ec7e3

.user-info {
  overflow: hidden;
  position: relative;

  width: 100%;
  height: 296px;

  z-index: 2;

  &::before {
    content: '';

    position: absolute;
    left: 0;
    width: 100%;
    height: 240px;

    background: linear-gradient(to right, medium 0%, medium 50%, dark 50%, dark 100%);
    z-index: -1;
  }

  &::after {
    content: '';

    position: absolute;
    top: 240px;
    height: 40px;
    width: 100%;
    left: 50%;
    margin-left: -400px;

    background-color: light;
    z-index: -1;
  }
}

.user-info__content {
  position: absolute;

  left: 50%;
  width: 1000px;
  height: 100%;
  margin-left: -500px;

  &::before {
    content: '';

    position: absolute;
    left: 0;
    width: 100%;
    height: 240px;

    background: linear-gradient(120deg, medium 0%, medium 20%, dark 20%, dark 100%);
    z-index: -1;
  }
}

.user-info__picture {
  position: absolute;

  left: 0;
  bottom: 0;
  width: 150px;
  height: 150px;

  border: 4px solid light;
  border-radius: 50%;
}

.user-info__logo {
  position: absolute;

  top: 20px;
  left: 50%;
  margin-left: -108px;
}

.user-info__username {
  position: absolute;

  bottom: 50px;
  left: 180px;

  color: white;
  font-size: 26px;
  font-weight: lighter;
}

.user-info__stats {
  position: absolute;

  top: 240px;
  left: 180px;
  height: 40px;

  color: white;
  font-size: 21px;
  line-height: 40px;
}

.user-info__stats__value {
  margin: 0 30px 0 15px;
  font-weight: normal;
}
